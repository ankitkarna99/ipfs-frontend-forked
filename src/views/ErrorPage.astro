---
import Container from "../components/Container.astro";
import Icon from "../elements/Icon.astro";

interface Props {
  title: string;
  heading: string;
  info: string;
}
const {title, heading, info} = Astro.props
---

<Container className="error page hero" >
  <div class="no entry icon">
    <Icon variant="no-entry-3" />
  </div>

    <div class="content">
      <p class="title">{title}</p>

      <h1>
        {heading}
      </h1>

      <p class="info">
        {info}
      </p>
    </div>
</Container>