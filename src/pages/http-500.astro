---
import BaseLayout from "../layouts/BaseLayout.astro";
import Seo from "../components/Seo.astro";
import styles from "./http-500.scss?inline";
import ErrorPage from "../views/ErrorPage.astro";
---

<BaseLayout headerStyle="default">
  <Seo
    slot="seo"
    title="HTTP 500: Internal Server Error"
    description="Error Processing Your Request"
    og={{
      image: "/assets/images/meta/og/ipfs.png",
      imageAlt: "Neptune Mutual IPFS Gateway",
    }}
  />
  <style slot="header" is:inline set:html={styles}></style>
  
  <ErrorPage 
    title="HTTP 500: Internal Server Error"
    heading="Error Processing Your Request"
    info="The reauested resource is either inaccessible or the server encountered a processing error while fulfilling the request."
  />

  <Fragment slot="footer">
    <script src="../scripts/home/index.js"></script>
  </Fragment>
</BaseLayout>