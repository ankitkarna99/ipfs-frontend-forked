---
import Icon from "../../elements/Icon.astro";

import { normalizeUrl } from "../../../util/url";

interface Props {
  section: NavSection;
}
const { section } = Astro.props;

const { title, more } = section;
const t = (x: any) => x;
---

<div class="nav video section container">
  <h4 class="title">{t(title)}</h4>
  <div class="content">
    <button
      class="video container play button initially hidden"
      data-video-id={""}
    >
      <div class="thumbnail">
        <img
          src={""}
          alt={""}
          loading="lazy"
        />
        <div class="overlay">
          <Icon variant="play" size={"2xl"} />
        </div>
      </div>
      <div class="video content">
        <h3 class="video title" />
        <p class="video supporting text" />
      </div>
    </button>
  </div>
  {
    more && (
      <a
        class="more"
        href={normalizeUrl(more.href)}
        rel="noreferrer"
        target="_blank"
      >
        {t(more.title)} <Icon size={"sm"} variant="arrow-right" />
      </a>
    )
  }
</div>
